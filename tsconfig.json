{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES6",
      "ES2021"
    ],
    "module": "NodeNext",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "templates"
  ],
  "lib": [
    "esnext"
  ],
  "ts-node": {
    "esm": true
  }
}
